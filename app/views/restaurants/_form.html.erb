<div class="form-inline">
  <%= form_for(@restaurant) do |f| %>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address %>
    </div>

    <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    </div>

    <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, Restaurant::CATEGORIES %>
    </div>
    <%= f.submit :class => "btn btn-warning" %>
  <% end %>
</div>
